%%% local-var-decl
%! f(10.0) == 52.0;
func f(a : float) -> (c : float)
  var b : tensor[2](float);
  b(0) = 42.0;
  b(1) = a;
  c = b(0) + b(1);
end 

%%% local-var-def-zero
%! f(10.0) == 10.0;
func f(a : float) -> (c : float)
  var b : tensor[3](float) = 0.0;
  b(1) = a;
  c = b(0) + b(1) + b(2);
end 

%%% local-var-def-lit
%! f(10.0) == 94.0;
func f(a : float) -> (c : float)
  var b : tensor[3](float) = [42.0, 42.0, 42.0]';
  b(1) = a;
  c = b(0) + b(1) + b(2);
end

%%% local-scope
%! f(1) == 1;
func f(a : int) -> (c : int)
  var b : tensor[2,2](int);
  b(1,1) = a;
  do
    var b : tensor[3,3](float);
    b(1,1) = 0.0;
    b(2,2) = -1.0;
  end while false;
  c = b(1,1);
end

%%% local-const
%! f(1) == 1;
func f(a : int) -> (c : int)
  const b : tensor[2](int) = 0;
  c = b(0) + a;
end
