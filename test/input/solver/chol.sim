element Vertex
  b : float;
  x : float;
  fixed : bool;
end

element Edge
end

extern V : set{Vertex};
extern E : set{Edge}(V,V);

func asm(e : Edge, v : (Vertex*2)) -> (A : tensor[V,V](float))
  if (v(0).fixed)
    A(v(0),v(0)) = 2.0;
  else
    A(v(0),v(0)) = 1.0;
  end
  if (v(1).fixed)
    A(v(1),v(1)) = 2.0;
  else
    A(v(1),v(1)) = 1.0;
  end
  A(v(0),v(1)) = 1.0;
  A(v(1),v(0)) = 1.0;
end

export func main()
  A = map asm to E reduce +;
  solver = chol(A);
  V.x = lltsolve(solver, V.b);
  cholfree(solver);
end
