%%% if-neq
%! f(0) == 3;
%! f(1) == 1;
func f(p : int) -> (r : int)
  if p != 0
    r = 1;
  else
    r = 3;
  end
end

%%% if
%! f(0) == 0;
func f(p : int) -> (r : int)
  if p == 0
    r = 0;
  end
end

%%% if-else
%! f(0) == 0;
%! f(1) == 42;
func f(p : int) -> (r : int)
  if p == 0
    r = 0;
  else
    r = 42;
  end
end

%%% if-elif-else
%! f(0) == 0;
%! f(1) == 1;
%! f(2) == 2;
%! f(3) == 42;
func f(p : int) -> (r : int)
  if p == 0
    r = 0;
  elif p == 1
    r = 1;
  elif p == 2
    r = 2;
  else
    r = 42;
  end
end
