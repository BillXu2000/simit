element Trig
  a : float;
end

element Vert
  b : float;
end

extern verts : set{Vert};
extern trigs : set{Trig}(verts, verts);

func dist(t : Trig, v : (Vert*3)) -> ( R : tensor[verts](float))
  R(v(0)) = t.a;
  R(v(1)) = t.a;
  R(v(2)) = t.a;
end

proc main
  R = map dist to trigs reduce +;
  verts.b = R;
end

